@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

@if (currentCount % 2 == 0)
{
    <p role="status" class="text-primary">Current count is even: @currentCount</p>
}
else
{
    <p role="status" class="text-primary">Current count is odd: @currentCount</p>
}


<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
